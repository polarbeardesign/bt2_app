<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event type</th>
      <th>Title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_type %></td>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime("%H:%M %b %-d, %Y") %></td>
        <td><%= event.end_time.strftime("%H:%M %b %-d, %Y") %></td>
        <td><%= event.location %></td>
        <td><%= markdown event.description %></td>
        <td><%= link_to 'Show', event %>, <%= link_to 'Edit', edit_event_path(event) %>, <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

